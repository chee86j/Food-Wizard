# Server
NODE_ENV=production
PORT=5000
ALLOWED_ORIGINS=https://localhost:4173,http://localhost:4173

# Database credentials (used by both the app and the Postgres container)
DB_NAME=food_wizard_db
DB_USERNAME=foodwizard
DB_PASSWORD=supersecretpassword
DB_HOST=db
DB_PORT=5432
PG_URI=
DB_SSL=false
DB_STARTUP_TIMEOUT=45000
DB_STARTUP_RETRY_INTERVAL=3000

# External API keys
SPOONACULAR_API_KEY=replace_me

# Frontend build-time variable
VITE_API_BASE_URL=http://localhost:5000

# Postgres container values (leave empty to fall back to DB_* above)
POSTGRES_DB=food_wizard_db
POSTGRES_USER=foodwizard
POSTGRES_PASSWORD=supersecretpassword
